extends ../layout

block content
    h1.
         #{title}
    ul
        - each todo, i in todos
            li
                = todo.content 
                = todo.completed 
                = todo.updated_at 

                form(action='/todos/#{todo._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/todos/#{todo._id}/edit') Edit
                p
                    a(href='/todos/#{todo._id}') Show